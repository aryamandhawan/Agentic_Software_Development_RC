// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/dotnet
{
	"name": "C# (.NET) with Browser (VNC + CDP)",

	// Use single Dockerfile with all services combined
	"build": {
		"dockerfile": "Dockerfile"
	},
	"workspaceFolder": "/workspaces/rc-documents",
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/rc-documents,type=bind,consistency=cached",

	// Grant SYS_ADMIN for Chrome sandboxing and increase shared memory
	"runArgs": ["--cap-add=SYS_ADMIN", "--shm-size=1g"],

	// Features to install in the dev container
	"features": {
		"ghcr.io/azure/azure-dev/azd:0": {
			"version": "stable"
		}
	},

	// Start Redis, browser services, and initialize local settings
	"postCreateCommand": "bash tools/init-local-settings.sh",
	"postStartCommand": "bash .devcontainer/post-start.sh",

	"containerEnv": {
		"SCREEN_HEIGHT": "1080"
	},

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-dotnettools.csdevkit",
				"github.vscode-github-actions",
				"ms-azuretools.vscode-azurefunctions",
				"Azurite.azurite"
			]
		}
	},

	// Forward ports for SWA and browser access
	// 4187: SWA emulator, 5900: VNC, 6080: noVNC, 9222: CDP
	"forwardPorts": [4187, 5900, 6080, 9222]

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
